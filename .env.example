# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/auth-service

# JWT Authentication
JWT_SECRET=your-secret-key-should-be-complex
JWT_EXPIRES_IN=24h

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5173/auth/google/callback

# OpenID Connect / Keycloak
OPENID_ISSUER=http://keycloak:8080/realms/auth-service
OPENID_CLIENT_ID=auth-service-client
OPENID_CLIENT_SECRET=your-openid-client-secret
OPENID_CALLBACK_URL=http://localhost:5173/auth/openid/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:5173/auth/github/callback

# Frontend and Cookies
FRONTEND_URL=http://localhost:5173
COOKIE_SECRET=strong-cookie-secret-key
COOKIE_MAX_AGE=86400000

# Redis
REDIS_URL=redis://localhost:6379